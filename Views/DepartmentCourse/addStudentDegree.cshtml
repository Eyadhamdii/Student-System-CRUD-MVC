@model Department
@{
    Layout = null;
    Course crs = ViewBag.course;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>addStudentDegree</title>
</head>
<body>
    <h1>Department Name : @Model.DeptName</h1> <br />
    <h1>Course Name : @crs.Crs_Name</h1>


    <form method="post">

        @foreach (var item in Model.Students)
        {
            <label>@item.Name</label>
            <input type="text" name="degree.@item.Id"/>
        }
        <input type="submit" value="add"/>
    </form>

</body>
</html>
